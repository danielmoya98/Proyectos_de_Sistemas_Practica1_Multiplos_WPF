<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="Bredondo" TargetType="Button">
        <Setter Property="Background" Value="Red"/> <!-- Personaliza el color de fondo según tus preferencias -->
        <Setter Property="Foreground" Value="White"/> <!-- Personaliza el color de texto según tus preferencias -->
        <Setter Property="Width" Value="50"/> <!-- Personaliza el tamaño del botón según tus preferencias -->
        <Setter Property="Height" Value="50"/> <!-- Personaliza el tamaño del botón según tus preferencias -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5"> <!-- Ajusta el valor de CornerRadius para esquinas redondeadas -->
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>